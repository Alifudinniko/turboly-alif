<%= form_tag tasks_path, method: :get do %>
        <%= text_field_tag :desc %>
        <%= date_field_tag :due_date %>
        <%= select_tag :priority, options_for_select(Priority.all.collect{|p| [p.name, p.id]}),{ include_blank: "Choose a Priority"}%>
        <%= submit_tag "Search"%>
<% end %>

<%= link_to "Clear search", tasks_path%>