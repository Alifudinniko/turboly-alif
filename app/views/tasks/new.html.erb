<div class="mb-3" align="center">
<h1> Create Task</h1>
</div>
<%= link_to 'back', tasks_path %>

<%= form_with model: @task, url: tasks_path do |form| %>
    <% if form.object.errors.any? %>
    <div class="alert alert-danger">
        <% form.object.errors.full_messages.each do |message| %>
            <div><%= message %> </div>
        <% end %>
    </div>
    <% end %>
    <div class="mb-3">
        <%= form.label :name %>
        <%= form.text_field :name, class:"form-control", placeholder:"name task" %>
    </div>
    <div class="mb-3">
        <%= form.label :desc %>
        <%= form.text_area :desc, class:"form-control" ,placeholder:"description of task" %>
    </div>
    <div class="mb-3">
        <%= form.label :due_date %>
        <%= form.date_field :due_date, class:"form-control"  %>
    </div>
    <div class="mb-3">
        <%= form.label :priority_id %>

        <%= form.select :priority_id, Priority.all.collect{|p| [p.name, p.id]},{ include_blank: "Choose a Priority"}, class:"form-select" %>
    </div>
    <div class="mb-3">
        <%= form.submit "Create Task", class:"btn btn-primary"%>
    </div>
<% end %>