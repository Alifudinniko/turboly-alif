<div class="mb-3" align="center">
<h1> Sign In </h1>
</div>
<%= form_with url: sign_in_path do |form| %>

  <div class="mb-3">
        <%= form.label :email %>
        <%= form.text_field :email, class:"form-control" ,placeholder:"email@turboly.com" %>
    </div>
    <div class="mb-3">
        <%= form.label :password %>
        <%= form.password_field :password, class:"form-control" , placeholder:"password" %>
    </div>
     <div class="mb-3">
        <%= form.submit "Sign In", class:"btn btn-primary"%>
    </div>
<% end %>